          \tikz[remember picture,baseline]\node[,draw = none, text = black,
                     fill = blue!20,]
                     {\mdf@frametitlefont\strut Definition~\thedef#1};\relax%
         }%
    \par\kern.5\baselineskip}%
  \@afterheading}

